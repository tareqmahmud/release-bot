# Server Configuration
PORT=3000
WEBHOOK_BASE_URL=https://your-domain.com

# GitHub Configuration
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret_here
GITHUB_API_TOKEN=your_github_personal_access_token_with_admin_repo_hook_scope

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_from_botfather
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Multi-Profile Configuration
# Comma-separated list of GitHub profile URLs to monitor
MONITORED_PROFILES=https://github.com/openai,https://github.com/microsoft

# Optional: JSON config file path for advanced per-profile settings
# CONFIG_FILE=config/profiles.json

# Repository Filtering (optional)
# Comma-separated patterns; supports wildcards
# REPO_ALLOWLIST=codex*,gpt*
# REPO_BLOCKLIST=*-docs,*-test
INCLUDE_ARCHIVED=false
INCLUDE_FORKS=false

# Polling Configuration (for repos without webhook access)
POLL_INTERVAL_MINUTES=15
ENABLE_POLLING=true

# Message Configuration
MAX_CHANGELOG_LENGTH=2500
